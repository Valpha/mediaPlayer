<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".LeftFragment">


    <!--当前播放列表界面布局-->

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:background="@drawable/curbackg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_listname"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:text="播放列表1"
                android:textColor="#01B8F9"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="1/10"
                android:textColor="#999999"
                android:textSize="15sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_curl"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_listname"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/imageLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <ImageView

                        android:id="@+id/iv_changpian"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="false"
                        android:layout_marginStart="114dp"
                        android:layout_marginLeft="114dp"
                        android:layout_marginTop="70dp"
                        android:layout_marginEnd="23dp"
                        android:layout_marginRight="23dp"
                        android:src="@drawable/changpian" />


                    <ImageView


                        android:id="@+id/iv_xiaotu"
                        android:layout_width="70dp"
                        android:layout_height="70dp"

                        android:layout_alignStart="@+id/iv_changpian"
                        android:layout_alignLeft="@+id/iv_changpian"
                        android:layout_alignTop="@+id/iv_changpian"
                        android:layout_alignEnd="@+id/iv_changpian"
                        android:layout_alignRight="@+id/iv_changpian"
                        android:layout_alignBottom="@+id/iv_changpian"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="31dp"
                        android:layout_marginEnd="53dp"
                        android:layout_marginRight="53dp"
                        android:layout_marginBottom="39dp"
                        android:src="@drawable/changpianshow" />


                    <ImageView
                        android:id="@+id/albumImage"
                        android:layout_width="190dp"
                        android:layout_height="190dp"

                        android:layout_alignEnd="@+id/iv_changpian"
                        android:layout_alignRight="@+id/iv_changpian"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"


                        android:layout_alignParentTop="true"
                        android:layout_marginStart="31dp"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="65dp"
                        android:layout_marginEnd="76dp"
                        android:layout_marginRight="76dp"
                        android:src="@drawable/tupian3" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyric"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_songname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:textColor="#FFFFFF"
                        android:textSize="24px"
                        tools:text="sss" />

                    <TextView
                        android:id="@+id/tv_ssinger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_songname"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_toEndOf="@+id/tv_songname"
                        android:layout_toRightOf="@+id/tv_songname"
                        android:textColor="#999999"
                        android:textSize="18px" />

                    <ImageView
                        android:id="@+id/tv_cut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_songname"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/cutline" />

                    <LinearLayout
                        android:id="@+id/LL_zuoqu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_cut"
                        android:layout_alignLeft="@+id/tv_songname"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_gdci"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#999999"
                            android:textSize="15px" />

                        <TextView
                            android:id="@+id/tv_writer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#999999"
                            android:textSize="15px" />

                        <TextView
                            android:id="@+id/tv_gdqu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#999999"
                            android:textSize="15px" />

                        <TextView
                            android:id="@+id/tv_zuoqu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#999999"
                            android:textSize="15px" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/lv_geci"
                        android:layout_width="171dp"
                        android:layout_height="250dp"
                        android:layout_below="@+id/LL_zuoqu"
                        android:layout_alignLeft="@+id/LL_zuoqu"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginRight="3dp"
                        android:divider="@null"
                        android:dividerHeight="5dp"
                        android:textColor="#FFFFFF">

                    </ListView>

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonandseekbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="3.2"
            android:orientation="vertical">

            <LinearLayout

                android:id="@+id/i_button"
                android:layout_width="613dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="168dp"
                tools:layout_editor_absoluteY="498dp">


                <ImageButton

                    android:id="@+id/fravoriteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/search_fravorite" />

                <ImageButton
                    android:id="@+id/modulBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/search_modul" />

                <ImageButton

                    android:id="@+id/last_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/search_presslast" />


                <ImageButton
                    android:id="@+id/palyingBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="center"
                    android:src="@drawable/play_1" />

                <ImageButton

                    android:id="@+id/next_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/search_pressnext" />

                <ImageButton

                    android:id="@+id/voicenull_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/search_pressnullvoice" />

                <ImageButton
                    android:id="@+id/voice_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/search_pressvoice" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/bt_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/i_button"
                tools:layout_editor_absoluteX="0dp">

                <TextView
                    android:id="@+id/l_seekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="0:00" />

                <SeekBar
                    android:id="@+id/v_seekbar"
                    android:layout_width="600dp"
                    android:layout_height="28dp"
                    android:layout_below="@+id/bt_progress"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:maxHeight="4.0dip"
                    android:minHeight="4.0dip"
                    android:paddingLeft="16.0dip"
                    android:paddingRight="16.0dip"
                    android:progressDrawable="@drawable/search_progress" />

                <TextView
                    android:id="@+id/r_seekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:text="0:00" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>