<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:context=".LeftFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/i_button"
            android:layout_marginBottom="38dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView

                    android:id="@+id/iv_changpian"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="350dp"
                    android:src="@drawable/changpian" />


                <ImageView


                    android:id="@+id/iv_xiaotu"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:layout_alignStart="@+id/iv_changpian"
                    android:layout_alignLeft="@+id/iv_changpian"
                    android:layout_alignTop="@+id/iv_changpian"
                    android:layout_alignEnd="@+id/iv_changpian"
                    android:layout_alignRight="@+id/iv_changpian"
                    android:layout_alignBottom="@+id/iv_changpian"
                    android:layout_marginStart="62dp"
                    android:layout_marginLeft="62dp"
                    android:layout_marginTop="59dp"
                    android:layout_marginEnd="63dp"
                    android:layout_marginRight="63dp"
                    android:layout_marginBottom="56dp"
                    android:src="@drawable/changpianshow" />


                <ImageView
                    android:id="@+id/albumImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerVertical="true"

                    android:layout_marginLeft="270dp"
                    android:layout_marginTop="63dp"
                    android:scaleType="center"
                    android:src="@drawable/changpianshow" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/i_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bt_progress"
            android:layout_marginBottom="21dp"
            android:orientation="horizontal">

            <ImageButton

                android:id="@+id/fravoriteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_fravorite" />

            <ImageButton

                android:id="@+id/modulBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_modul" />

            <ImageButton

                android:id="@+id/last_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_presslast" />


            <ImageButton
                android:id="@+id/palyingBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_press" />

            <ImageButton

                android:id="@+id/next_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_pressnext" />

            <ImageButton

                android:id="@+id/voicenull_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_pressnullvoice" />

            <ImageButton
                android:id="@+id/voice_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_pressvoice" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/bt_progress"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/l_seekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="0:00" />

            <SeekBar
                android:id="@+id/v_seekbar"
                android:layout_width="620px"
                android:layout_height="wrap_content"
                android:maxHeight="4.0dip"
                android:minHeight="4.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:progressDrawable="@drawable/search_progress" />

            <TextView
                android:id="@+id/r_seekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="0:00" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>