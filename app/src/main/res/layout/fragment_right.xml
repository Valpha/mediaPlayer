<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:context=".LeftFragment">


    <!--当前播放列表界面布局-->

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_listname"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="播放列表1"
                android:textColor="#01B8F9" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="1/10"
                android:textColor="#999999" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_curl"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_listname" />
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/i_button"
            android:layout_marginBottom="38dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1.2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

            <RelativeLayout
                android:id="@+id/LL_lyric"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_songname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="龙卷风"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:textSize="24px"
                    android:textColor="#FFFFFF"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周杰伦"
                    android:layout_toRightOf="@+id/tv_songname"
                    android:layout_alignBottom="@+id/tv_songname"
                    android:layout_marginLeft="10dp"
                    android:textSize="18px"
                    android:textColor="#999999"
                    />

                <LinearLayout
                    android:id="@+id/LL_zuoqu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/tv_songname"
                    android:layout_alignLeft="@+id/tv_songname">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="作词："
                        android:textSize="15px"
                        android:textColor="#999999"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="徐若瑄"
                        android:textSize="15px"
                        android:textColor="#999999"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  作曲："
                        android:textSize="15px"
                        android:textColor="#999999"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周杰伦"
                        android:textSize="15px"
                        android:textColor="#999999"
                        android:layout_weight="1"/>
                </LinearLayout>
                <ListView
                    android:divider="@null"
                    android:id="@+id/lv_geci"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/LL_zuoqu"
                    android:layout_alignLeft="@+id/LL_zuoqu">

                </ListView>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/i_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bt_progress"
            android:layout_marginBottom="21dp"
            android:orientation="horizontal">

            <ImageButton

                android:id="@+id/fravoriteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_fravorite" />

            <ImageButton

                android:id="@+id/modulBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_modul" />

            <ImageButton

                android:id="@+id/last_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_presslast" />


            <ImageButton
                android:id="@+id/palyingBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_press" />

            <ImageButton

                android:id="@+id/next_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_pressnext" />

            <ImageButton

                android:id="@+id/voicenull_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_pressnullvoice" />

            <ImageButton
                android:id="@+id/voice_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_pressvoice" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/bt_progress"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/l_seekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="0:00" />

            <SeekBar
                android:id="@+id/v_seekbar"
                android:layout_width="620px"
                android:layout_height="wrap_content"
                android:maxHeight="4.0dip"
                android:minHeight="4.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:progressDrawable="@drawable/search_progress" />

            <TextView
                android:id="@+id/r_seekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="0:00" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>